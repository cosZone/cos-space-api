// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Clerk JWT: https://clerk.com/docs/backend-requests/making/jwt-templates#default-claims
model User {
  id            Int       @id @default(autoincrement())
  clerkUserID   String    @unique // Clerk User Id 唯一标识 如user_abc123bcde
  username      String? // 用户自定义昵称 可重复
  email         String?
  walletAddress String?
  avatar        String?
  createAt      DateTime? // Clerk JWT
  updateAt      DateTime? // Clerk JWT

  posts    Post[]    @relation("UserPosts")
  comments Comment[] @relation("UserComments")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  SHELVE // 暂时下架
}

model Post {
  id          Int         @id @default(autoincrement())
  title       String
  description String?
  content     String?
  coverUrl    String?
  status      PostStatus? @default(DRAFT)
  author      User?       @relation("UserPosts", fields: [authorId], references: [id])
  authorId    Int?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime?   @updatedAt

  comments Comment[] @relation("PostComments")
  tags     Tag[]     @relation("PostTags") // 多对多
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique // 标签名称
  icon      String? // 标签图标
  color     String? // 标签颜色
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  posts Post[] @relation("PostTags") // 多对多
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String // 分类名称 如笔记
  key         String? // 对应英文短链接描述 如note
  description String? // 分区描述
  coverUrl    String? // 分区封面
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

// 评论 可以回复评论 也可以引用文章句子评论
model Comment {
  id         Int       @id @default(autoincrement())
  content    String
  quotedText String? // 引用的文章句子
  authorId   Int
  postId     Int
  parentId   Int? // 如果这是一个回复，这里将存储被回复的评论的ID
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt

  author  User      @relation("UserComments", fields: [authorId], references: [id])
  post    Post      @relation("PostComments", fields: [postId], references: [id])
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies Comment[] @relation("CommentReplies")
}

enum GalleryType {
  TAPE
}

model GalleryItem {
  id        Int         @id @default(autoincrement())
  itemType  GalleryType
  name      String
  cover     String?
  images    String[] // 使用 Scalar List 功能 https://www.prisma.io/docs/concepts/components/prisma-client/working-with-fields/working-with-scalar-lists-arrays
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @updatedAt

  orgId Int?
  org   Organization? @relation(fields: [orgId], references: [id])
}

model Organization {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  description  String?
  avatar       String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime?     @updatedAt
  galleryItems GalleryItem[]
}
